# Konfigurationsdatei für SQLite-Datenbanksynchronisierung

# Pfad zur Master-Datenbank (erforderlich)
MASTER_DB_PATH=/pfad/zu/ihrer/master.db

# Webserver-Konfiguration
WEB_HOST=0.0.0.0
WEB_PORT=5002
DEBUG=False

# Synchronisations-Konfiguration
SYNC_INTERVAL=60  # Sekunden zwischen automatischen Synchronisationen
IGNORED_TABLES=  # Komma-getrennte Liste von Tabellen, die ignoriert werden sollen
CHUNK_SIZE=10485760  # 10 MB in Bytes

# Logging-Konfiguration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/db_sync.log

# Pfad für temporäre Dateien
TEMP_DIR=temp 